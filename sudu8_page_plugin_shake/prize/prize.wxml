<view class="prizebox">
    <view class="prize_single hbj" wx:for="{{prizes}}" wx:for-index="i">
        <view class="prize_left">
            <image class="prize_single_left" mode="aspectFill" src="{{item.thumb}}"></image>
            <image class="ydjbg" mode="aspectFill" src="/sudu8_page/resource/img/ydjbg.png">
                <view>{{i+1}}</view>
            </image>
        </view>
        <view class="prize_single_right">
            <view class="prize_title">{{item.detail}}</view>
            <view class="prize_count hbj">
                <view class="prize_count_view flex1">数量：{{item.total}}</view>
                <view class="prize_count_view">库存：{{item.storage}}</view>
            </view>
        </view>
    </view>
</view>
