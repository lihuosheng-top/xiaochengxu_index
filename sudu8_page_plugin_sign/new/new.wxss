page {
    height: 100%;
}

.container {
    background: #fff;
    height: 100%;
}

.head {
    display: flex;
    flex-direction: row;
}

.head_phb {
    width: 375rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}

.head_phb_text {
    font-size: 30rpx;
    font-weight: 700;
    line-height: 80rpx;
    text-align: center;
}

.head_phb_view {
    width: 100rpx;
    height: 2px;
    background-color: #eee;
    margin: 0 auto;
}

.paiming {
    margin: 20rpx 4%;
    padding: 10rpx;
    border-bottom: 1px solid #eee;
    margin-top: 20rpx;
    line-height: 62rpx;
}

.paiming_image {
    float: left;
    width: 58rpx;
    height: 58rpx;
    border-radius: 58rpx;
    margin-top: 4rpx;
}

.paiming_text1 {
    margin-left: 20rpx;
    font-size: 26rpx;
}

.paiming_text2 {
    float: right;
    color: #ccc;
    font-size: 22rpx;
}