page {
    height: 100%;
}

.container {
    background: #fff;
    height: 100%;
}

.head {
    display: flex;
    flex-direction: row;
}

.head_phb {
    width: 375rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}

.head_phb_text {
    font-size: 30rpx;
    font-weight: 700;
    line-height: 80rpx;
    text-align: center;
}

.head_phb_view {
    width: 100rpx;
    height: 2px;
    background-color: #eee;
    margin: 0 auto;
}

.topthree {
    margin: 52rpx 0 40rpx;
    display: flex;
    flex-direction: row;
    overflow: visible;
}

.second .top {
    position: absolute;
    left: 22rpx;
    top: 44rpx;
    width: 146rpx;
}

.second {
    width: 180rpx;
    display: flex;
    flex-direction: column;
    margin-left: 44rpx;
    position: relative;
    overflow: visible;
}

.second .avatar {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    border-radius: 120rpx;
    margin-top: 60rpx;
    border: 3rpx solid #FF4C79;
}

.second_text1 {
    text-align: center;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    margin-top: 26rpx;
    font-weight: 700;
}

.second_text2 {
    font-size: 24rpx;
    text-align: center;
    color: #999;
    margin-top: 6rpx;
}

span {
    padding: 0 6rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #14DA66;
}

.first {
    width: 192rpx;
    display: flex;
    flex-direction: column;
    margin: 0 60rpx;
    position: relative;
    overflow: visible;
}

.first .top {
    position: absolute;
    left: -14rpx;
    top: -20rpx;
    width: 225rpx;
}

.first .avatar {
    width: 180rpx;
    height: 180rpx;
    margin: 0 auto;
    border-radius: 120rpx;
    border: 4rpx solid #FBB120;
}

.three {
    width: 180rpx;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: visible;
}

.three .top {
    position: absolute;
    left: 22rpx;
    top: 44rpx;
    width: 146rpx;
}

.three .avatar {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    border-radius: 120rpx;
    margin-top: 60rpx;
    border: 3rpx solid #49A2FD;
}

.paiming {
    margin: 20rpx 4%;
    padding: 10rpx;
    border-bottom: 1px solid #eee;
    margin-top: 20rpx;
    line-height: 62rpx;
}

.paiming .num {
    float: left;
    font-size: 26rpx;
    margin-right: 40rpx;
    font-style: italic;
    overflow: visible;
    font-weight: bold;
    color: #ccc;
}

.paiming_image {
    float: left;
    width: 58rpx;
    height: 58rpx;
    border-radius: 58rpx;
    margin-top: 4rpx;
}

.paiming_text1 {
    margin-left: 20rpx;
    font-size: 26rpx;
}

.paiming_text2 {
    float: right;
    color: #999;
    font-size: 22rpx;
}

.paiming_text2 span {
    padding: 0 6rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #14DA66;
}