.select_typebox {
    padding: 0 20rpx;
    font-size: 0;
}

.select_type_single {
    width: 33.3%;
    padding: 30rpx 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #ddd;
    display: inline-block;
}

.select_type_single_view {
    padding: 10rpx;
    box-sizing: border-box;
    border-right: 2rpx solid #ddd;
    text-align: center;
}

.select_type_single:nth-child(3n) .select_type_single_view {
    border: none;
}

.select_type_single:last-child .select_type_single_view {
    border-right: none;
}

.select_type_icon {
    font-size: 56rpx;
    height: 74rpx;
}

.select_type_text {
    font-size: 24rpx;
    color: #838383;
}