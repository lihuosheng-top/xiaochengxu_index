.logistics_headbox {
    background-color: #fff;
    padding: 30rpx;
}

.logistics_wlzt {
    font-size: 28rpx;
    color: #232323;
}

.logistics_wlzt text {
    color: #f3514f;
}

.logistics_wl {
    font-size: 28rpx;
    color: #232323;
}

.logistics_wl text {
    font-family: Arial,Helvetica,sans-serif;
    margin-left: 20rpx;
}

.logistics_person {
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 16rpx;
}

.pay_list_person {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    display: block;
}

.logistics_person_center {
    margin-left: 20rpx;
    flex: 1;
}

.logistics_person_center_view1 {
    font-size: 24rpx;
    color: #969696;
}

.logistics_person_center_view2 {
    font-size: 28rpx;
    color: #232323;
}

.logistics_person_right1 {
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    background-color: #75D075;
    position: relative;
}

.logistics_person_right1 image {
    width: 26rpx;
    height: 27rpx;
    display: block;
    position: absolute;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.logistics_person_right {
    width: 25rpx;
    height: 48rpx;
    margin-left: 30rpx;
}

.logistics_detail {
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 28rpx;
}

.logistics_detail_single_left {
    margin-top: 10rpx;
    position: relative;
}

.logistics_yuan {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: #E5E5E5;
    z-index: 1000;
}

.logistics_yuan2 {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    background-color: #f3514f;
    position: absolute;
    left: -4rpx;
    top: -4rpx;
    display: none;
    z-index: 990;
    border: 4rpx solid #f9a8a7;
    box-sizing: border-box;
}

.logistics_line {
    width: 2rpx;
    height: 108rpx;
    background-color: #E5E5E5;
    margin: 0 auto;
}

.logistics_detail_right {
    margin-left: 20rpx;
}

.logistics_detail_right_view1 {
    font-size: 24rpx;
    color: #969696;
}

.logistics_detail_right_view2 {
    font-size: 24rpx;
    color: #969696;
    font-family: Arial,Helvetica,sans-serif;
    margin-top: 10rpx;
}

.logistics_detail_single {
    margin-top: -10rpx;
}

.logistics_detail_single:first-child {
    margin-top: 0;
}

.logistics_detail_single:first-child .logistics_yuan2 {
    display: block;
}

.logistics_detail_single:first-child .logistics_yuan1 {
    background: #f3514f;
}

.logistics_detail_single:first-child .logistics_detail_right_view1 {
    font-size: 28rpx;
    color: #232323;
}