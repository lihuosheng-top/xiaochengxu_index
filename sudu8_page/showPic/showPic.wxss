page {
    height: 100%;
    overflow-y: hidden;
}

.trump {
    position: relative;
    width: 100%;
    height: 100%;
}

.PicBg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.PicBg image {
    width: 100%;
    height: 100%;
    filter: blur(12px);
}

.PicBgC {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.2);
}

.content {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 100%;
}

.content swiper {
    height: 100%;
    overflow: visible;
}

.content swiper .swiper-item {
    position: relative;
    margin: -140rpx auto 0;
    width: 80%;
    text-align: center;
    overflow: visible;
}

swiper-item {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    overflow: visible;
}

.content swiper .swiper-item image {
    display: block;
    width: 100%;
    border-radius: 5px;
    box-shadow: 0 0 12rpx -3rpx #fff;
}

.pic_page_text {
    position: fixed;
    bottom: 60rpx;
    left: 3%;
    box-sizing: border-box;
    width: 94%;
    font-size: 24rpx;
    color: #fff;
    background: rgba(0,0,0,0.2);
    padding: 20rpx;
    border-radius: 3px;
    z-index: 999;
}