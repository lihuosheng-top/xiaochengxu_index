</view>
<view class="gap"></view>
<view class="pd-0-35 hbj">
    <view bindtap="change" class="card {{a==1?'card_active':''}}" data-id="1">商品详情</view>
    <view bindtap="change" class="card {{a==2?'card_active':''}}" data-id="2">规格参数</view>
