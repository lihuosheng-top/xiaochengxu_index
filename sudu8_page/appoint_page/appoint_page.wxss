page {
    background-color: #F8F9FA;
}

.hbj {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex1 {
    flex: 1;
}

.seathead {
    border-bottom: 2rpx solid #eeeeee;
    height: 98rpx;
    padding: 0 30rpx;
    background-color: #fff;
}

.seathead_left {
    font-size: 28rpx;
    color: #434343;
    font-weight: bold;
}

.seathead_date {
    font-size: 24rpx;
    color: #838383;
}

.seathead_date {
    font-family: Arial,Helvetica,sans-serif;
}

.seathead_right {
    padding: 4rpx 16rpx;
    border: 2rpx solid #E52A2A;
    font-size: 24rpx;
    color: #e52a2a;
    margin-left: 16rpx;
    border-radius: 6rpx;
}

.seathead_right text {
    font-size: 30rpx;
    margin-left: 4rpx;
    vertical-align: -2rpx;
}

.seat_state {
    background-color: #fff;
    padding: 22rpx 30rpx;
    text-align: center;
}

.seat_state_view {
    display: inline-block;
    font-size: 24rpx;
    color: #434343;
    margin-right: 70rpx;
}

.seat_state_view image {
    width: 42rpx;
    height: 42rpx;
    margin-right: 16rpx;
    vertical-align: -8rpx;
}

.seat_state_view:last-child {
    margin-right: 0;
}

.seat_content {
    margin-top: 35rpx;
    white-space: nowrap;
    width: 690rpx;
    padding: 0 30rpx;
    font-size: 0;
}

.seat_content_column {
    display: inline-block;
    margin-right: 12rpx;
    vertical-align: top;
}

.seat_content_column:last-child {
    margin-right: 0;
}

.seat_label {
    font-size: 24rpx;
    color: #838383;
    padding: 0 30rpx;
    height: 55rpx;
    border: 2rpx solid #eee;
    border-radius: 6rpx;
    line-height: 51rpx;
    background-color: #fff;
    box-sizing: border-box;
    text-align: center;
}

.seat_label_first {
    height: 55rpx;
}

.mb-30 {
    margin-bottom: 30rpx;
}

.seat_content_imgbox {
    height: 55rpx;
    position: relative;
}

.seat_content_imgbox image {
    width: 42rpx;
    height: 42rpx;
    display: block;
    position: absolute;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.seat_content_imgbox view {
    height: 30rpx;
}

.seat_selectedbox {
    padding: 30rpx;
    background-color: #fff;
    width: 690rpx;
    white-space: nowrap;
    position: fixed;
    left: 0;
    bottom: 100rpx;
    font-size: 0;
}

.seat_select {
    padding: 0 20rpx;
    height: 64rpx;
    border: 2rpx solid #eee;
    box-sizing: border-box;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #434343;
    display: inline-block;
    margin-right: 12rpx;
}

.seat_select:last-child {
    margin-right: 0;
}

.seat_true {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    background-color: #e52a2a;
    color: #fff;
    font-size: 28rpx;
    position: fixed;
    left: 0;
    bottom: 0;
}