page {
    color: #454545;
    font-size: 28rpx;
}

image {
    overflow: visible;
}

.b-fff {
    background: #ffffff;
}

.mb20 {
    margin-bottom: 20rpx;
}

.mr10 {
    margin-right: 10rpx;
}

.pd10 {
    padding: 10rpx;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-shu-center {
    align-items: center;
}

.color_red {
    color: #f03150;
}

input {
    border: 0;
    padding: 0;
    margin: 0;
}

.f-bold {
    font-weight: bold;
}

.fxtop {
    background: linear-gradient(120deg,#FE593D,#FF204D);
    height: 220rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.fxtop .con {
    z-index: 666;
    width: 700rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #ffffff;
    position: absolute;
    left: 40rpx;
    top: 42rpx;
}

.touxiang {
    width: 120rpx;
    height: 120rpx;
    border: 4rpx solid #fff;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.nickname {
    font-size: 34rpx;
}

.middle {
    height: 170rpx;
    padding: 0 20px;
    background-color: #fff;
    border-bottom: 2rpx solid #f6f6f9;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.fxfoot {
    background: #ffffff;
    margin-top: 20rpx;
    padding: 30rpx 40rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    font-size: 24rpx;
}

.model {
    display: flex;
    flex-direction: row;
    width: 324rpx;
    height: 150rpx;
    align-items: center;
    border-right: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
}

.model:nth-child(2n) {
    border-right: 0;
    padding-left: 40rpx;
    width: 284rpx;
}

.model:last-child,.model:nth-last-child(2) {
    border-bottom: 0;
}

.model image {
    margin-right: 30rpx;
}

.model>view view:first-child {
    font-size: 28rpx;
}